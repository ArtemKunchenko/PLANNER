<Window x:Class="PLANNER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition Width="421"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="DropDownButton" Content="List" Width="100" Height="30" Click="DropDownButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Popup x:Name="DropDownPopup" Placement="Relative" HorizontalOffset="0" VerticalOffset="30" StaysOpen="False" AllowsTransparency="True" PopupAnimation="Slide">
            <Border BorderBrush="Black" BorderThickness="1" Background="White">
                <StackPanel>
                    <Button 
                        x:Name="Page1Button"
                        Content="Page1" 
                        Width="100" Margin="5"
                        Command="{Binding page1Button_Click}"
                        />
                    <Button 
                        x:Name="Page2Button"
                        Content="Page2"
                        Width="100" 
                        Margin="5"
                        Command="{Binding page2Button_Click}"
                        />
                    <Button 
                        x:Name="Page3Button"
                        Content="Page3"
                        Width="100"
                        Margin="5"
                        Command="{Binding page3Button_Click}"
                        />
                </StackPanel>
            </Border>
        </Popup>
        <Frame 
            Grid.Column="1"
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"
            Opacity="{Binding FrameOpasity}"/>
    </Grid>
</Window>